            .header__bottom
                .container
                    ul.menu-categories
                        li.menu-categories__item
                            a.menu-categories__link(href="#") Квадроциклы
                        li.menu-categories__item
                            a.menu-categories__link(href="#") Катера
                        li.menu-categories__item
                            a.menu-categories__link(href="#") Гидроциклы
                        li.menu-categories__item
                            a.menu-categories__link(href="#") Лодки
                        li.menu-categories__item
                            a.menu-categories__link(href="#") Вездеходы
                        li.menu-categories__item
                            a.menu-categories__link(href="#") Снегоходы
                        li.menu-categories__item
                            a.menu-categories__link(href="#") Двигатели
                        li.menu-categories__item
                            a.menu-categories__link(href="#") Запчасти
        section.banner-section
            .container
                .banner-section__inner
                    .banner-section__slider.swiper-container
                        .swiper-wrapper
                            .banner-section__slide.swiper-slide
                                a.banner-section__slider-item(href="#")
                                    img.banner-section__slider-img(src="img/banner/banner-slide.jpg", alt="")
                            .banner-section__slide.swiper-slide
                                a.banner-section__slider-item(href="#")
                                    img.banner-section__slider-img(src="img/banner/banner-slide.jpg", alt="")
                            .banner-section__slide.swiper-slide
                                a.banner-section__slider-item(href="#")
                                    img.banner-section__slider-img(src="img/banner/banner-slide.jpg", alt="")
                            .banner-section__slide.swiper-slide
                                a.banner-section__slider-item(href="#")
                                    img.banner-section__slider-img(src="img/banner/banner-slide.jpg", alt="")
                            .banner-section__slide.swiper-slide
                                a.banner-section__slider-item(href="#")
                                    img.banner-section__slider-img(src="img/banner/banner-slide.jpg", alt="")
                            .banner-section__slide.swiper-slide
                                a.banner-section__slider-item(href="#")
                                    img.banner-section__slider-img(src="img/banner/banner-slide.jpg", alt="")
                        .swiper-prev
                            img(src="img/arrow-left.svg", alt="")
                        .swiper-next
                            img(src="img/arrow-right.svg", alt="")
                        .swiper-pagination
                    a.banner-section__item.sale-item(href="#")
                        .sale-item__top
                            p.sale-item__info акция
                            .sale-item__price
                                .price.sale-item__price-new 190 000
                                .price.sale-item__price-old 225 000
                        img.sale-item__img(src="img/usercontent/sale.png", alt="")
                        h5.sale-item__title Лодочный мотор Suzuki DF9.9BRS
                        p.sale-item__footer Акция действует до 
                            span 31.08.2020
        section.search
            .container 
                .search__inner 
                    .search__tabs 
                        button.tab.search__tabs-item.tab--active(data-tab="#tab_1") Поиск по  номеру
                        button.tab.search__tabs-item(data-tab="#tab_2") Поиск по марке
                        button.tab.search__tabs-item(data-tab="#tab_3") Поиск по названию товара
                    .search__content
                        .tabs-content.search__content-item.tabs-content--active#tab_1
                            form.search__content-form
                                input.search__content-input(type="text" placeholder="Введите номер")
                                button.search__content-btn(type="submit") Искать
                        .tabs-content.search__content-item#tab_2
                            form.search__content-form
                                input.search__content-input(type="text" placeholder="Введите марку")
                                button.search__content-btn(type="submit") Искать
                        .tabs-content.search__content-item#tab_3
                            form.search__content-form
                                input.search__content-input(type="text" placeholder="Введите название")
                                button.search__content-btn(type="submit") Искать
        section.categories
            .container 
                .categories__inner
                    a.categories__item(href="#") 
                        .categories__item-info
                            h4.categories__item-title Квадроциклы
                            p.categories__item-text Подробее
                        .categories__item-img
